    .columns
      .column.is-two-thirds
        .columns
          .column
            .box.is-paddingless
              .card-content
                %h2.title 都道府県から探す
                .columns.is-multiline
                  = render partial: 'region', collection: @prefectures, cached: true
      %aside.column
        = render 'shared/side_bar'
